<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="328dp"
    android:layout_height="768dp">


    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Stok Barang"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/primary"
        />

    <ImageButton
        android:id="@+id/silang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:backgroundTint="@color/white"
        android:padding="16dp"
        app:srcCompat="@drawable/ic_cross" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/toska"
        android:text="Nama Barang" />

    <EditText
        android:id="@+id/edittextusername"
        android:layout_width="328sp"
        android:layout_height="50sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="text"
        android:hint="DA 42"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:layout_marginTop="155dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/toska"
        android:text="Kategori" />

    <EditText
        android:layout_width="328sp"
        android:layout_height="50sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="text"
        android:hint="Pacul"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:layout_marginTop="235dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/toska"
        android:text="Tanggal" />

    <EditText
        android:id="@+id/tanggaledit"
        android:layout_width="328sp"
        android:layout_height="50sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="255dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="text"
        android:hint="31 / 12 / 2024"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/buttontanggalkeluar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="265dp"
        android:background="@color/white"
        app:srcCompat="@drawable/iconstanggal" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:layout_marginTop="325dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/toska"
        android:text="Total Stok (Atur Stok Awal)" />

    <EditText
        android:layout_width="210sp"
        android:layout_height="50sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="345dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="number"
        android:hint="1"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:layout_width="95sp"
        android:layout_height="50sp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="345dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="number"
        android:hint="PCS"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/toska"
        android:text="Keterangan" />

    <EditText
        android:id="@+id/tanggalview"
        android:layout_width="328sp"
        android:layout_height="50sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="430dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="text"
        android:hint="Aman Tidak ada cacat"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/toska"
        android:text="Kode Barang" />

    <EditText
        android:id="@+id/edithargabarag"
        android:layout_width="328sp"
        android:layout_height="50sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="515dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="number"
        android:hint="DA 42"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonsimpan"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginTop="630dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"
        android:padding="12dp"
        android:text="Simpan"
        android:textColor="@color/primary"
        app:icon="@null"
        android:textSize="14sp"
        app:backgroundTint="#FFBB00"
        app:cornerRadius="100dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@android:color/transparent"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp"
        android:onClick="onButtonJualClick" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonhapus"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="630dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="20dp"
        android:paddingStart="12dp"
        android:paddingEnd="24dp"
        android:text="Hapus"
        android:textColor="@color/red"
        app:icon="@null"
        app:backgroundTint="@android:color/transparent"
        app:strokeColor="@color/white"
        app:strokeWidth="0.75dp"
        app:cornerRadius="100dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@android:color/transparent"
        android:onClick="onButtonLaporClick" />


</FrameLayout>