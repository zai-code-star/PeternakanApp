<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:background="@color/primary"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Penjualan"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="70dp"
        android:textColor="@color/toska"
        android:textSize="8sp"
        android:text="Tanggal" />

    <EditText
        android:layout_width="328sp"
        android:layout_height="50sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="text"
        android:hint="01/01/2024"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="100dp"
        android:background="@color/primary"
        app:srcCompat="@drawable/iconstanggal" />


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="328dp"
        android:layout_height="83dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="24dp"
        app:cardBackgroundColor="#FEFEFE">

        <!-- Konten di dalam CardView -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:paddingTop="12dp"
            android:paddingBottom="17dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Ar 1"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:background="@drawable/borderprimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:paddingTop="12dp"
            android:paddingBottom="17dp"
            android:paddingStart="50dp"
            android:paddingEnd="16dp"
            android:text="-"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="17dp"
            android:paddingStart="60dp"
            android:paddingEnd="16dp"
            android:text="Kambing Madura"
            android:textColor="@color/primary"
            android:textSize="12sp" />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="45dp"
            android:paddingBottom="17dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="5 KG"
            android:textColor="@color/black"
            android:textSize="10sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="14dp"
            android:paddingBottom="12dp"
            android:paddingStart="250dp"
            android:paddingEnd="5dp"
            android:text="Penggemukan"
            android:textColor="@color/black"
            android:textSize="10sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="55dp"
            android:paddingBottom="5dp"
            android:paddingStart="272dp"
            android:paddingEnd="5dp"
            android:text="1 ekor"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonjual"
        android:layout_width="157dp"
        android:layout_height="50dp"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="16dp"
        android:padding="12dp"
        android:text="Simpan"
        android:textColor="@color/primary"
        app:icon="@null"
        android:textSize="14sp"
        app:backgroundTint="#FFBB00"
        app:cornerRadius="100dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@android:color/transparent"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp"
        android:onClick="onButtonJualClick" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonhapus"
        android:layout_width="157dp"
        android:layout_height="50dp"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="181dp"
        android:paddingEnd="24dp"
        android:text="Hapus"
        android:textColor="@color/kuning"
        app:icon="@null"
        app:backgroundTint="@android:color/transparent"
        app:strokeColor="#FFBB00"
        app:strokeWidth="0.75dp"
        app:cornerRadius="100dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@android:color/transparent"
        android:onClick="onButtonLaporClick" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="250dp"
        android:textColor="@color/toska"
        android:textSize="8sp"
        android:text="Jenis Satuan" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="325dp"
        android:textColor="@color/toska"
        android:textSize="8sp"
        android:text="Harga jual" />

    <EditText
        android:layout_width="328sp"
        android:layout_height="50sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="text"
        android:hint="20000"
        android:textColorHint="@color/abu"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <RadioButton
        android:id="@+id/radioButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="16dp"
        android:text="per ekor"
        android:textSize="8sp"
        android:textColor="@color/white"
        />

    <RadioButton
        android:id="@+id/radioButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="120dp"
        android:text="per KG"
        android:textSize="8sp"
        android:textColor="@color/white"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="410dp"
        android:textColor="@color/toska"
        android:textSize="8sp"
        android:text="Tulis Catatan" />

    <EditText
        android:layout_width="328sp"
        android:layout_height="50sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="425dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="text"
        android:hint="Tulis Catatan"
        android:textColorHint="@color/abu"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</FrameLayout>