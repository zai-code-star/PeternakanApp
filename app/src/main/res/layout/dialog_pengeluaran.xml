<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="328dp"
    android:layout_height="768dp">


    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Pengeluaran"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/primary"
        />

    <ImageButton
        android:id="@+id/imageView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:backgroundTint="@color/white"
        android:padding="16dp"
        app:srcCompat="@drawable/ic_cross" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="70dp"
        android:textColor="@color/toska"
        android:textSize="8sp"
        android:text="Tanggal" />

    <EditText
        android:layout_width="280sp"
        android:layout_height="50sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="text"
        android:hint="01/01/2024"
        android:textColorHint="@color/primary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="100dp"
        android:background="@color/white"
        app:srcCompat="@drawable/iconstanggal" />


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="280dp"
        android:layout_height="83dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="24dp"
        app:cardBackgroundColor="#FEFEFE">

        <!-- Konten di dalam CardView -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:paddingTop="12dp"
            android:paddingBottom="17dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="BB 20"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:background="@drawable/borderprimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:paddingTop="12dp"
            android:paddingBottom="17dp"
            android:paddingStart="50dp"
            android:paddingEnd="16dp"
            android:text="-"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="17dp"
            android:paddingStart="60dp"
            android:paddingEnd="16dp"
            android:text="Pakan Kering"
            android:textColor="@color/primary"
            android:textSize="12sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="17dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Harga"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="45dp"
            android:paddingBottom="17dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Jumblah"
            android:textColor="@color/black"
            android:textSize="10sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="235dp"
            android:paddingEnd="5dp"
            android:text="Keluar"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="10sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="5dp"
            android:paddingStart="210dp"
            android:paddingEnd="5dp"
            android:text="RP 30 000"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="45dp"
            android:paddingBottom="5dp"
            android:paddingStart="235dp"
            android:paddingEnd="5dp"
            android:text="100Kg"
            android:textColor="@color/toska"
            android:textSize="10sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="55dp"
            android:paddingBottom="5dp"
            android:paddingStart="235dp"
            android:paddingEnd="5dp"
            android:text="Tunai"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonsimpan"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"
        android:padding="12dp"
        android:text="Simpan"
        android:textColor="@color/primary"
        app:icon="@null"
        android:textSize="14sp"
        app:backgroundTint="#FFBB00"
        app:cornerRadius="100dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@android:color/transparent"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp"
        android:onClick="onButtonJualClick" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonhapus"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="20dp"
        android:paddingStart="12dp"
        android:paddingEnd="24dp"
        android:text="Hapus"
        android:textColor="@color/red"
        app:icon="@null"
        app:backgroundTint="@android:color/transparent"
        app:strokeColor="@color/white"
        app:strokeWidth="0.75dp"
        app:cornerRadius="100dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@android:color/transparent"
        android:onClick="onButtonLaporClick" />


</FrameLayout>