<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    tools:context=".ui.menu.history.HistoryFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="40dp"
        android:text="Stok Barang"
        android:textSize="16sp"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/search_input"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="16dp"
        android:hint="Cari Barang..."
        android:textColor="@color/kuning"
        android:textColorHint="@color/kuning"
        android:padding="16dp"
        android:textSize="14sp"
        android:layout_toLeftOf="@+id/search_button"
        android:layout_marginRight="8dp"/>

    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="290dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_cari"
        android:backgroundTint="@color/primary"
        android:padding="12dp"/>

    <ImageView
        android:layout_width="360dp"
        android:layout_height="720dp"
        app:srcCompat="@drawable/bottomsheet"
        android:layout_marginTop="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 Januari 2024"
        android:padding="16dp"
        android:textSize="12sp"
        android:layout_marginTop="210dp"
        android:textColor="@color/primary"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ganti"
        android:padding="16dp"
        android:layout_marginLeft="295dp"
        app:srcCompat="@drawable/ic_filter"
        android:textSize="12sp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="205dp"
        android:textColor="@color/kuning"/>

    <androidx.cardview.widget.CardView
        android:layout_width="328dp"
        android:layout_height="156dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="24dp"
        app:cardBackgroundColor="#FEFEFE">

        <!-- Konten di dalam CardView -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:paddingTop="12dp"
            android:paddingBottom="17dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="DA 42"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:background="@drawable/borderprimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:paddingTop="12dp"
            android:paddingBottom="17dp"
            android:paddingStart="50dp"
            android:paddingEnd="16dp"
            android:text="-"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:paddingTop="12dp"
            android:paddingBottom="17dp"
            android:paddingStart="60dp"
            android:paddingEnd="16dp"
            android:text="Pacul"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:paddingTop="30dp"
            android:paddingBottom="17dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Re-stock Terakhir"
            android:textColor="@color/toska"
            android:textSize="10sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:paddingTop="30dp"
            android:paddingBottom="17dp"
            android:paddingStart="100dp"
            android:paddingEnd="16dp"
            android:text="01 / 01 / 2024"
            android:textColor="@color/toska"
            android:textSize="10sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:paddingTop="75dp"
            android:paddingBottom="17dp"
            android:paddingStart="40dp"
            android:paddingEnd="16dp"
            android:text="Sisa Stok"
            android:background="@drawable/borderprimary"
        android:textColor="@color/kuning"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="95dp"
            android:paddingBottom="17dp"
            android:paddingStart="46dp"
            android:paddingEnd="16dp"
            android:text="1 Pcs"
            android:textStyle="bold"
            android:textColor="@color/kuning"
            android:textSize="12sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:paddingTop="75dp"
            android:paddingBottom="17dp"
            android:paddingStart="135dp"
            android:paddingEnd="16dp"
            android:text="Stok Awal"
            android:background="@drawable/borderprimary"
            android:textColor="@color/toska"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="95dp"
            android:paddingBottom="17dp"
            android:paddingStart="142dp"
            android:paddingEnd="16dp"
            android:text="10 Pcs"
            android:textStyle="bold"
            android:textColor="@color/toska"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:paddingTop="75dp"
            android:paddingBottom="17dp"
            android:paddingStart="233dp"
            android:paddingEnd="16dp"
            android:text="Harga Beli"
            android:background="@drawable/borderprimary"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="95dp"
            android:paddingBottom="17dp"
            android:paddingStart="230dp"
            android:paddingEnd="16dp"
            android:text="Rp 200.000"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12sp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:paddingTop="90dp"
            android:paddingBottom="5dp"
            android:paddingStart="273dp"
            android:paddingEnd="5dp"
            android:text="15KG"
            android:textColor="@color/toska"
            android:textSize="10sp" />

        <ImageButton
            android:id="@+id/buttonlihatstok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"
            android:backgroundTint="@color/white"
            android:layout_marginTop="2dp"
            android:layout_marginStart="280dp"/>

    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/buttonplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="290dp"
        android:layout_marginBottom="46dp"
        android:background="@color/white"
        app:srcCompat="@drawable/icon_plus" />

</FrameLayout>
