<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".ui.register.Register">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="285dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022"
            app:srcCompat="@drawable/shape_kuning" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil Peternak"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/imageView6" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Peternakan"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="0.106"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:layout_constraintVertical_bias="0.031" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="308dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="text"
            android:background="@drawable/beckground_edit_text"
            android:paddingLeft="16dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textViewSandi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIK KTP"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/editTextText"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/editTextText"
            app:layout_constraintVertical_bias="0.017" />

        <EditText
            android:id="@+id/editTextTextsandi"
            android:layout_width="308dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="text"
            android:background="@drawable/beckground_edit_text"
            android:paddingLeft="16dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextText"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewSandi"
            app:layout_constraintTop_toBottomOf="@+id/textViewSandi" />


        <TextView
            android:id="@+id/textViewSandiUlang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/editTextTextsandi"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editTextTextsandi"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextsandi"
            app:layout_constraintVertical_bias="0.024" />

        <EditText
            android:id="@+id/editTextTextsandiUlang"
            android:layout_width="308dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/beckground_edit_text"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="16dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextTextsandi"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewSandiUlang"
            app:layout_constraintTop_toBottomOf="@+id/textViewSandiUlang" />


        <TextView
            android:id="@+id/textViewJenisKel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="Jenis Kelamin"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/editTextNama"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editTextTextsandiUlang"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextsandiUlang"
            app:layout_constraintVertical_bias="0.006" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Pria"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewJenisKel"
            app:layout_constraintTop_toBottomOf="@+id/textViewJenisKel" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wanita"
            app:layout_constraintEnd_toEndOf="@+id/radioButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/radioButton"
            app:layout_constraintTop_toBottomOf="@+id/radioButton" />


        <TextView
            android:id="@+id/textViewNoHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Hp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/radioButton2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/radioButton2"
            app:layout_constraintTop_toBottomOf="@+id/radioButton2"
            app:layout_constraintVertical_bias="0.032" />

        <EditText
            android:id="@+id/editTextNoHp"
            android:layout_width="308dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="number"
            android:background="@drawable/beckground_edit_text"
            android:paddingLeft="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textViewNoHP"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewNoHP"
            app:layout_constraintTop_toBottomOf="@+id/textViewNoHP" />

        <TextView
            android:id="@+id/textViewTTL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempat Tanggal Lahir"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/editTextNoHp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editTextNoHp"
            app:layout_constraintTop_toBottomOf="@+id/editTextNoHp"
            app:layout_constraintVertical_bias="0.05" />

        <EditText
            android:id="@+id/editTextTTL"
            android:layout_width="130dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="text"
            android:background="@drawable/beckground_edit_text"
            android:paddingLeft="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textViewTTL"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewTTL"
            app:layout_constraintTop_toBottomOf="@+id/textViewTTL" />

        <EditText
            android:id="@+id/editTextTTL2"
            android:layout_width="130dp"
            android:layout_height="42dp"
            android:background="@drawable/beckground_edit_text"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/editTextTTL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toEndOf="@+id/editTextTTL"
            app:layout_constraintTop_toBottomOf="@+id/textViewTTL"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/editTextTTL2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.179"
            app:layout_constraintStart_toEndOf="@+id/editTextTTL2"
            app:layout_constraintTop_toTopOf="@+id/editTextTTL2"
            app:layout_constraintVertical_bias="0.666"
            app:srcCompat="@drawable/iconstanggal" />


        <TextView
            android:id="@+id/textViewAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/editTextTTL"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewTTL"
            app:layout_constraintTop_toBottomOf="@+id/editTextTTL"
            app:layout_constraintVertical_bias="0.06" />

        <EditText
            android:id="@+id/editTextAlamat"
            android:layout_width="308dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="text"
            android:background="@drawable/beckground_edit_text"
            android:paddingLeft="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textViewAlamat"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewAlamat"
            app:layout_constraintTop_toBottomOf="@+id/textViewAlamat" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            android:layout_width="213dp"
            android:layout_height="42dp"
            android:layout_marginTop="150dp"
            android:backgroundTint="@color/blue"
            android:paddingLeft="16dp"
            android:text="SIMPAN"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:cornerRadius="5dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextAlamat"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editTextAlamat"
            app:layout_constraintTop_toBottomOf="@+id/editTextAlamat" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonhapus"
            android:layout_width="86dp"
            android:layout_height="42dp"
            android:backgroundTint="@color/blue"
            android:paddingLeft="16dp"
            android:text="Hapus"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:cornerRadius="5dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/button"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>