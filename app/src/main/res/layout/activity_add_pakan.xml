<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:backgroundTint="@color/primary"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="17dp"
            android:text="Pakan"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/ic_line" />


        <TextView
            android:id="@+id/textView18"
            android:layout_width="335dp"
            android:layout_height="32dp"
            android:textColor="@color/white"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="80dp"
            android:textStyle="bold"
            android:text="Lengkapi terlebih dahulu data pakan ternak yang akan kamu tambahkan  " />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="360dp"
            android:layout_height="720dp"
            app:srcCompat="@drawable/bottomsheet"
            android:layout_marginTop="154dp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/toska"
            android:text="Estimasi Biaya Pakan" />

        <EditText
            android:id="@+id/editTextHargaa"
            android:layout_width="328sp"
            android:layout_height="50sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:inputType="number"
            android:hint="RP 25 000"
            android:textColorHint="@color/abu"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/toska"
            android:text="Estimasi Kebutuhan Pakan " />

        <EditText
            android:layout_width="328sp"
            android:layout_height="50sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:inputType="number"
            android:hint="Kg/Hari"
            android:textColorHint="@color/abu"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/toska"
            android:text="Kategori" />

        <EditText
            android:id="@+id/editTagKat"
            android:layout_width="328sp"
            android:layout_height="50sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="370dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:inputType="text"
            android:hint="Penggemukan Kambing"
            android:textColorHint="@color/abu"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageButton
            android:id="@+id/buttonTagKategori"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="380dp"
            android:background="@color/white"
            app:srcCompat="@drawable/ic_bawah" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/toska"
            android:text="Tanggal" />

        <EditText
            android:id="@+id/edittexttangal"
            android:layout_width="328sp"
            android:layout_height="50sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:inputType="text"
            android:hint="Atur tanggal Masuk"
            android:textColorHint="@color/abu"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="460dp"
            android:background="@color/white"
            app:srcCompat="@drawable/iconstanggal" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:layout_marginTop="520dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/toska"
            android:text="Bobot Masuk" />

        <EditText
            android:layout_width="328sp"
            android:layout_height="50sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="530dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:inputType="number"
            android:hint="Bobot Masuk"
            android:textColorHint="@color/abu"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/toska"
            android:text="Jenis Pakan" />

        <EditText
            android:id="@+id/edittextjenis"
            android:layout_width="328sp"
            android:layout_height="50sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="610dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:inputType="text"
            android:hint="Jenis Pakan"
            android:textColorHint="@color/abu"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageButton
            android:id="@+id/tagdownjenis"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="620dp"
            android:background="@color/white"
            app:srcCompat="@drawable/ic_bawah" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonjual"
            android:layout_width="157dp"
            android:layout_height="50dp"
            android:layout_marginTop="800dp"
            android:layout_marginLeft="16dp"
            android:padding="12dp"
            android:text="Simpan"
            android:textColor="@color/primary"
            app:icon="@null"
            android:textSize="14sp"
            app:backgroundTint="#FFBB00"
            app:cornerRadius="100dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@android:color/transparent"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="0dp"
            android:onClick="onButtonJualClick" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonhapus"
            android:layout_width="157dp"
            android:layout_height="50dp"
            android:layout_marginTop="800dp"
            android:layout_marginLeft="181dp"
            android:paddingEnd="24dp"
            android:text="Hapus"
            android:textColor="@color/kuning"
            app:icon="@null"
            app:backgroundTint="@android:color/transparent"
            app:strokeColor="#FFBB00"
            app:strokeWidth="0.75dp"
            app:cornerRadius="100dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@android:color/transparent"
            android:onClick="onButtonLaporClick" />


    </FrameLayout>
</ScrollView>